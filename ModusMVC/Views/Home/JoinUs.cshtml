@model ModusMVC.Models.Applicant

@{
    ViewBag.Title = "Join Us";
}

<h2>Join Us Page</h2>
<link href="~/css/Index.css" type="text/css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="col-xs-12" style="height:50px;"></div>
        <h4>Applicant Information</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">

            <label for="Name" class="control-label col-md-2">First Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ApplicantName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ApplicantName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="Name" class="control-label col-md-2">Last Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ApplicantSurname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ApplicantSurname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="Name" class="control-label col-md-2">Identity Number</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ApplicantIdentity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ApplicantIdentity, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="Name" class="control-label col-md-2">Cell Number</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ApplicantCell, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ApplicantCell, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="Name" class="control-label col-md-2">Email Address</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ApplicantEmail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ApplicantEmail, "", new { @class = "text-danger" })
            </div>
        </div>

    

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Next"  class="btn home-btn wow fadeInLeft" />
            </div>
        </div>
       
        </div>


<div>
    @*<a href="javascript: history.go(-1)">Go Back</a>*@

    <ul id="Navigation">
        <li>@Html.ActionLink("Back", "Index", "Home")</li>
    </ul>
</div>
        }