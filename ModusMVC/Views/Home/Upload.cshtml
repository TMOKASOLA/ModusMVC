@model CSDropdownListMVC4.Models.CascadingDropDownSampleModel
@{
    ViewBag.Title = "Upload";
}
<link href="~/css/Index.css" type="text/css" rel="stylesheet" />
@section Scripts
{
    <script src="~/Scripts/CascadingDropDownSample.js"></script>
}
<h2>Upload Documents</h2>


@using (Html.BeginForm("Upload", "Home", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-xs-12" style="height:50px;"></div>

        <hr />
        <div class="form-group">
            @Html.Label("Application", new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                <select id="make" class="size-200 form-control" name="make">
                    <option value="-1">Please select a Application Type</option>
                    @foreach (KeyValuePair<string, string> make in Model.Makes)
                {
                        <option value="@make.Key">@make.Value</option>
                    }
                </select>
            </div>
        </div>

        
        

            <div class="form-group">
                @Html.Label("Specialization", new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    <select id="model" class="size-200 form-control" name="model" disabled>
                        <option value="-1" >Type of Specialization</option>
                    </select>
                </div>
            </div>


            <div class="form-group">
                @Html.Label("CV", new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    <input type="file" id="Avatar" name="upload" class="form-control" accept="pdf,.doc" required/>
                </div>
            </div>


            <div class="form-group">
                @Html.Label("ID DOCUMENT", new { @class = "control-label col-md-2"})
                <div class="col-md-4">
                    
                    @Html.TextBoxFor(m => m.idDoc, new { type = "file" ,@class="form-control"})
                </div>
            </div>

            <div class="form-group">
                @Html.Label("ACADEMIC RESULTS", new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    <input type="file" id="Avatar" name="AccResults" class="form-control" accept="pdf,.doc"  required/>
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Apply" class="btn home-btn wow fadeInLeft" onclick="myFunction()" />
                </div>
            </div>


            <div>
                <ul id="Navigation">
                    <li>@Html.ActionLink("Back", "Index", "Home")</li>
                </ul>
            </div>
        </div>

}

<script>
function myFunction() {
    var x = document.getElementById("Avatar").required;
    document.getElementById("demo").innerHTML = x;
}
</script>

<script>
    var myfile = "";

    $('#Avatar').click(function (e) {
        e.preventDefault();
        $('#Avatar').trigger('click');
    });

    $('#Avatar').on('change', function () {
        myfile = $(this).val();
        var ext = myfile.split('.').pop();
        if (ext == "pdf" || ext == "docx" || ext == "doc") {
            alert(ext);
        } else {
            alert(ext);
        }
    });
</script>

